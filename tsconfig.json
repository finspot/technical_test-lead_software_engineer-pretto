{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmit": true,
    "paths": { "~/*": ["./*"] },
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext"
  },
  "include": ["src", "vite.config.ts"]
}
